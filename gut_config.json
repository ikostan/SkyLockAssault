{
  "dirs": [  // Directories to scan for test scripts.
    "res://test/"  // Base test dir for your audio/volume tests.
  ],
  "include_subdirs": true,  // Recurse subfolders for full coverage.
  "prefix": "test_",  // Run only "test_*.gd" files.
  "suffix": ".gd",  // GDScript only.
  "post_run_script": "",  // Script after tests (empty for now).
  "pre_run_script": "",  // Script before tests (empty for now).
  "test_timeout": 5,  // 5s max per test to prevent hangs.
  "log_level": 2,  // Info + warnings + errors for CI balance.
  "opacity": 0.8,  // Editor panel opacity.
  "hide_orphans": true,  // Suppress orphan warnings in tests.
  "yield_between": {  // Yield for async (e.g., await in debounce tests).
    "after_x_tests": 5,
    "ms": 100
  },
  "native_script_classes": [],  // Empty for no GDExtension.
  "cmdline": {  // CI-specific.
    "color": true,  // Colored console output.
    "exit_on_success": true  // Exit 0 on pass for CI success.
  },
  "panel": {  // Editor UI.
    "font_name": "CourierPrime",
    "font_size": 16,
    "background_color": "#000000ff"
  },
  "settings": {  // Misc.
    "show_help": false
  }
}